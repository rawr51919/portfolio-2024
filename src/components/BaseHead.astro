---
/**
 * @desc This is the base head component that is used on all pages.
 */

// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "@styles/global.css";
import "@fontsource-variable/inter";
import { SEO } from "astro-seo";
import { SITE_TITLE, SITE_DESCRIPTION } from "@src/consts";
import { getLocale } from "astro-i18n-aut";
// title, description, and image interface
interface Props {
	title: string;
	description: string;
	image?: string;
}
const locale = getLocale(Astro.url);
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const resolvedImageWithDomain = new URL("/meta/opengraph.png", Astro.site).toString();
const { title = SITE_TITLE, description = SITE_DESCRIPTION, image = "./../../public/portfolio-website.png" } = Astro.props;
---
<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="theme-color" content="#fff">
<link rel="manifest" href="/manifest.json">
<link rel="icon" href="/favicon.ico" sizes="any">
<link rel="icon" href="/logo.svg" type="image/svg+xml">
<link rel="apple-touch-icon" href="/apple-touch-icon-180x180.png">
<!-- Primary Meta Tags -->
<title>{title}</title>
<!-- SEO data, this webpage utilizes this with Google search results -->
<SEO
	title={title}
	description={description}
	canonical={canonicalURL}
	openGraph={{
		basic: {
			url: canonicalURL,
			title: title,
			type: "website",
			image: resolvedImageWithDomain,
		},
		optional: {
			description: description,
			siteName: title,
			locale: locale,
		},
		image: {
			alt: title,
		},
	}}
	extend={{
		// extending the default link tags
		link: [
			{
				rel: "icon",
				type: "image/svg+xml",
				href: "/favicon.svg",
			},
		],
		// extending the default meta tags
		meta: [
			{
				name: "generator",
				content: Astro.generator,
			},
			{
				name: "viewport",
				content: "width=device-width,initial-scale=1",
			},
			{
				name: "twitter:image",
				content: image,
			},
			{ name: "twitter:title", content: "rawr51919's Portfolio" },
			{ name: "twitter:description", content: "rawr51919's portfolio for their creations and projects." },
		],
	}}
/>
